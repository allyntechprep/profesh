<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="occupation_box">Occupation</label>
      
    <input type="text" id="occupation_box" name="query_occupation">
  </div>
         
  <div>
    <label for="bio_box">Bio</label>
      
    <input type="text" id="bio_box" name="query_bio">
  </div>
         
  <div>
    <label for="display_name_box">Display name</label>
      
    <input type="text" id="display_name_box" name="query_display_name">
  </div>
         
  <div>
    <label for="employer_box">Employer</label>
      
    <input type="text" id="employer_box" name="query_employer">
  </div>
         
  <div>
    <label for="aspiring_occupation_box">Aspiring occupation</label>
      
    <input type="text" id="aspiring_occupation_box" name="query_aspiring_occupation">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>
